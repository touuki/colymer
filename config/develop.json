{
    "mongodb": {
        "url": "mongodb://192.168.30.1:27017/",
        "db": "colymer",
        "options": {
            "authSource": "colymer",
            "auth": {
                "user": "colymer",
                "password": "colymer"
            },
            "poolSize": 5,
            "useUnifiedTopology": true
        }
    },
    "storage": "default",
    "default_storage_options": {
        "tmp_dir": "tmp/",
        "api_prefix": "http://localhost:3000/api/",
        "url_prefix": "/attachment",
        "directory": "public/attachment",
        "max_file_size": "1GB"
    },
    "downloader":{
        "timeout": 300,
        "keep_alive": 15,
        "download_interval": 0,
        "parallel_count": 5,
        "options": {
            "headers":{
                "User-Agent": "colymer"
            }
        }
    }
}