{
    "mongodb": {
        "url": "mongodb://192.168.30.1:27017/",
        "db": "colymer",
        "options": {
            "authSource": "colymer",
            "auth": {
                "user": "colymer",
                "password": "colymer"
            },
            "poolSize": 5,
            "useUnifiedTopology": true
        }
    },
    "storage": "default",
    "tmp_dir": "tmp/",
    "default_storage_options": {
        "api_prefix": "http://localhost:3000/api/",
        "url_prefix": "/attachment",
        "directory": "public/attachment",
        "max_file_size": "1GB"
    },
    "downloader":{
        "timeout": 600,
        "keep_alive": 60,
        "user_agent": "colymer",
        "max_redirect_times": 4
    }
}